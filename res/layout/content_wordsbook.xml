<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   <FrameLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:background="@android:color/darker_gray">
       <TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="left|center_vertical"
    android:text="所有单词"
    android:textColor="@android:color/white"
    android:layout_marginLeft="8dp"/>
       <TextView 
           android:id="@+id/wordsbook_wordscount_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right|center_vertical"
    android:text="0个"
    android:textColor="@android:color/white"
    android:layout_marginRight="8dp"/>
   </FrameLayout>
	<com.fax.weihanstudy.wordsbook.WordsBookListView
            android:id="@+id/wordsbook_listview"
            android:fastScrollEnabled="true"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1" />

    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center"> 
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray" />
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <Button 
        android:id="@+id/wordsbook_addcustomword"
        android:onClick="click_in_wordsbook_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
        android:background="@drawable/gray_bg_when_press"
            android:drawableLeft="@android:drawable/ic_menu_add"
            android:textSize="14sp"
            android:text="添加单词"/>
        
        <TextView 
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16sp"
            android:text="/"/>
        <Button 
        android:id="@+id/wordsbook_import"
        android:onClick="click_in_wordsbook_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
        android:background="@drawable/gray_bg_when_press"
            android:drawableLeft="@android:drawable/ic_menu_set_as"
            android:textSize="14sp"
            android:text="导入"/> 
        <TextView 
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16sp"
            android:text="/"/>
        <Button 
        android:id="@+id/wordsbook_export"
        android:onClick="click_in_wordsbook_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
        android:background="@drawable/gray_bg_when_press"
            android:drawableLeft="@android:drawable/ic_menu_save"
            android:textSize="14sp"
            android:text="导出"/> 
        
    </LinearLayout>
    </LinearLayout> 
</LinearLayout>